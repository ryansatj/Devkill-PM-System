<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityLiveRegion="none"
    android:animateLayoutChanges="true"
    android:animationCache="false"
    android:background="#121213"
    android:backgroundTint="#000000"
    android:backgroundTintMode="add"
    android:focusable="auto"
    android:foregroundGravity="top"
    android:gravity="center"
    android:orientation="vertical"> <!-- Add this line -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="DevKill{}"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:layout_margin="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/rounded_container_white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_login"
            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_container_black"
            android:drawingCacheQuality="auto"
            android:fontFamily="monospace"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:insetLeft="50dp"
            android:insetRight="50dp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <TextView
            android:id="@+id/error_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="monospace"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B71C1C"/>

        <EditText
            android:id="@+id/pass_login"
            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/rounded_container_black"
            android:bufferType="spannable"
            android:fontFamily="monospace"
            android:hint="Password"
            android:inputType="textPassword"
            android:insetLeft="50dp"
            android:insetRight="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:typeface="normal" />
        <TextView
            android:id="@+id/error_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="monospace"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B71C1C"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:insetLeft="100dp"
            android:insetRight="100dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:background="@drawable/rounded_container_black_outline"
            android:text="LOGIN"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            app:cornerRadius="21dp"
            app:strokeColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Don't have an account?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="#00FFFFFF"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Register Now"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:iconTint="#00AA2121" />
    </LinearLayout>
</LinearLayout>